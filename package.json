{
  "name": "wasm-doom",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run build:example && bun run serve",
    "build": "bun build ./src/index.ts --outdir dist --minify",
    "build:example": "bun build ./src/index.ts --outdir ./example/dist",
    "serve": "serve ./example -l 3300"
  },
  "dependencies": {
    "@assemblyscript/loader": "^0.28.8"
  },
  "devDependencies": {
    "@types/bun": "1.2.23",
    "serve": "^14.2.5",
    "typescript": "^5.9.3"
  }
}
